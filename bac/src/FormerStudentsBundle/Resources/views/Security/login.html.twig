{% extends "FormerStudentsBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
<div class='container'>
    <div class='bs-docs-section'>
        <div class ='row'>
            <div class='col-lg-6'>
                <div class='panel panel-success'>
                    <div class='panel-heading'>
                        Connexion
                    </div>
                <div class='panel-body'>
                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form action="{{ path("fos_user_security_check") }}" method="post" class='form-horizontal'>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        <div class="form-group">
                            <label for="username" class ="col-lg-4 control-label">{{ 'security.login.username'|trans }}</label>
                            <div class="col-lg-8">
                                <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password" class ="col-lg-4 control-label">{{ 'security.login.password'|trans }}</label>
                            <div class="col-lg-8">
                                <input type="password" id="password" class="form-control" name="_password" required="required" />
                            </div>
                        </div>
                        <div class="login-group-checkbox">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                        </div>
                        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="col-lg-6 btn btn-primary" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock content %}
